      	delete  from cms_channel where id in
        <foreach collection="array" item = "ids" open="(" separator="," close=")">
        #{ids}
        </foreach>
    </delete>
    <select id="find" resultMap="channelResult" parameterType="java.util.Map">
        SELECT <include refid="allColumns"/> FROM cms_channel
        <where>
            and available=1
            and deleted=0
            <include refid="Channel_Where_Clause"/>
        </where>
