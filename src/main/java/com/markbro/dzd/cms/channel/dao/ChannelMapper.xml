    <sql id="Channel_Where_Clause">
        <if test="id != null and id != ''">
				AND id = #{id}
		</if>
			<if test="parentid != null and parentid != '' and parentid != 'root'">
				AND parentid = #{parentid}
		</if>
			<if test="name != null and name != ''">
				AND name like concat(concat('%',#{name}),'%')
		</if>
			<if test="jump_url != null and jump_url != ''">
				AND jump_url = #{jump_url}
		</if>
			<if test="img_url != null and img_url != ''">
				AND img_url = #{img_url}
		</if>
			<if test="small_img_url != null and small_img_url != ''">
				AND small_img_url = #{small_img_url}
		</if>
			<if test="new_flag != null and new_flag != ''">
				AND new_flag = #{new_flag}
		</if>
			<if test="hot_flag != null and hot_flag != ''">
				AND hot_flag = #{hot_flag}
		</if>
			<if test="sort != null and sort != ''">
				AND sort = #{sort}
		</if>
			<if test="subscribe_num != null and subscribe_num != ''">
				AND subscribe_num = #{subscribe_num}
		</if>
			<if test="createTime != null and createTime != ''">
				AND createTime = #{createTime}
		</if>
			<if test="createBy != null and createBy != ''">
				AND createBy = #{createBy}
		</if>
			<if test="updateBy != null and updateBy != ''">
				AND updateBy = #{updateBy}
		</if>
			<if test="updateTime != null and updateTime != ''">
				AND updateTime = #{updateTime}
		</if>
			<if test="available != null and available != ''">
				AND available = #{available}
		</if>
			<if test="deleted != null and deleted != ''">
				AND deleted = #{deleted}
		</if>
			
    </sql>
    <select id="get"  resultMap="channelResult">
        select <include refid="allColumns"/>
        from cms_channel
        where
        id =#{id}
    </select>
    <select id="getMap"  resultType="java.util.Map">
            select <include refid="allColumns"/>
            from cms_channel
            where
            id =#{id}
    </select>
    <insert id="add" useGeneratedKeys="true" keyProperty="id" parameterType="com.markbro.dzd.cms.channel.bean.Channel" flushCache="true">
    	insert into cms_channel(id,parentid,name,jump_url,img_url,small_img_url,new_flag,hot_flag,sort,subscribe_num,createTime,createBy,updateBy,updateTime,available,deleted)
    	values (#{id},#{parentid},#{name},#{jump_url},#{img_url},#{small_img_url},#{new_flag},#{hot_flag},#{sort},#{subscribe_num},now(),#{createBy},#{updateBy},now(),1,0)
    </insert>
    <insert id="addByMap" useGeneratedKeys="true" keyProperty="id" parameterType="java.util.Map" flushCache="true">
    	insert into cms_channel(id,parentid,name,jump_url,img_url,small_img_url,new_flag,hot_flag,sort,subscribe_num,createTime,createBy,updateBy,updateTime,available,deleted)
    	values (#{id},#{parentid},#{name},#{jump_url},#{img_url},#{small_img_url},#{new_flag},#{hot_flag},#{sort},#{subscribe_num},now(),#{createBy},#{updateBy},now(),1,0)
    </insert>
    <insert id="addBatch" flushCache="true">
        insert into cms_channel (id,parentid,name,jump_url,img_url,small_img_url,new_flag,hot_flag,sort,subscribe_num,createTime,createBy,updateBy,updateTime,available,deleted)
        values
        <foreach collection="list" item="item" separator="," >
        	(#{item.id},#{item.parentid},#{item.name},#{item.jump_url},#{item.img_url},#{item.small_img_url},#{item.new_flag},#{item.hot_flag},#{item.sort},#{item.subscribe_num},now(),#{item.createBy},#{item.updateBy},now(),1,0)
        </foreach>
    </insert>
    <update id="update" parameterType="com.markbro.dzd.cms.channel.bean.Channel" flushCache="true">
    	update cms_channel 
    	<set>
    		<if test="parentid != null">parentid=#{parentid},</if>
			<if test="name != null">name=#{name},</if>
			<if test="jump_url != null">jump_url=#{jump_url},</if>
			<if test="img_url != null">img_url=#{img_url},</if>
			<if test="small_img_url != null">small_img_url=#{small_img_url},</if>
			<if test="new_flag != null">new_flag=#{new_flag},</if>
			<if test="hot_flag != null">hot_flag=#{hot_flag},</if>
			<if test="sort != null">sort=#{sort},</if>
			<if test="subscribe_num != null">subscribe_num=#{subscribe_num},</if>
			<if test="createBy != null">createBy=#{createBy},</if>
			<if test="updateBy != null">updateBy=#{updateBy},</if>
			updateTime=now(),
			<if test="available != null">available=#{available},</if>
			<if test="deleted != null">deleted=#{deleted},</if>
			
    	</set>
    	 where
    	id =#{id}
    </update>
