	<sql id="allColumns">id,parentid,name,jump_url,img_url,small_img_url,new_flag,hot_flag,sort,subscribe_num,createTime,createBy,updateBy,updateTime,available,deleted</sql>
	<!--如果实体类中属性名与数据库表中的字段名不一致就需要用resultMap映射-->
