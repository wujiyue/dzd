	<select id="findByParentid" resultType="com.markbro.dzd.cms.channel.bean.Channel">
		select *
			from cms_channel
		<where>
			parentid=#{parentid}
			and deleted=0
			and available=1
		</where>
		order by sort
	</select>
	<select id="checkForDelete" resultType="java.lang.Integer"  parameterType="java.lang.String">
		select count(1)
			from cms_channel
		<where>
			parentid in ('${ids}')
			and deleted=0
		</where>
	</select>
	<select id="findByParentidCount" resultType="java.lang.Integer">
		select count(1)
			from cms_channel
		<where>
			parentid=#{parentid}
			and deleted=0
			and available=1
		</where>
	</select>

	<update id="updateSort" parameterType="java.lang.String">
		update cms_channel set sort=#{sort} where id=#{id}
	</update>
	<select id="getMaxSortByParentid" resultType="java.lang.Integer" parameterType="java.lang.String">
