		<result property="id" column="id" />
		<result property="parentid" column="parentid" />
		<result property="name" column="name" />
		<result property="jump_url" column="jump_url" />
		<result property="img_url" column="img_url" />
		<result property="small_img_url" column="small_img_url" />
		<result property="new_flag" column="new_flag" />
		<result property="hot_flag" column="hot_flag" />
		<result property="sort" column="sort" />
		<result property="subscribe_num" column="subscribe_num" />
		<result property="createTime" column="createTime" />
		<result property="createBy" column="createBy" />
		<result property="updateBy" column="updateBy" />
