<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC   
    "-//mybatis.org//DTD Mapper 3.0//EN"  
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.markbro.dzd.sys.permission.dao.PermissionMapper">
	<!--<sql id="addColumns">id,parentid,parentids,name,code,url,icon,sort,description,createTime,createBy,updateBy,updateTime,available,deleted</sql> -->
	<!--<sql id="updateColumns">parentid,parentids,name,code,url,icon,sort,description,createBy,updateBy,updateTime,available,deleted</sql> -->
	<cache type="com.markbro.asoiaf.mybatis.cache.AsoiafCache" eviction="org.apache.ibatis.cache.decorators.LruCache" readOnly="true" size="1024" flushInterval="3600000"/>
	<sql id="allColumns">id,parentid,parentids,name,code,url,icon,sort,description,createTime,createBy,updateBy,updateTime,available,deleted</sql>
	<!--如果实体类中属性名与数据库表中的字段名不一致就需要用resultMap映射-->
	<resultMap id="permissionResult" type="com.markbro.dzd.sys.permission.bean.Permission">
		<result property="id" column="id" />
		<result property="parentid" column="parentid" />
		<result property="parentids" column="parentids" />
		<result property="name" column="name" />
		<result property="code" column="code" />
		<result property="url" column="url" />
		<result property="icon" column="icon" />
		<result property="sort" column="sort" />
		<result property="description" column="description" />
		<result property="createTime" column="createTime" />
		<result property="createBy" column="createBy" />
		<result property="updateBy" column="updateBy" />
		<result property="updateTime" column="updateTime" />
		<result property="available" column="available" />
		<result property="deleted" column="deleted" />
	</resultMap>
    <sql id="Permission_Where_Clause">
        <if test="id != null and id != ''">
				AND id = #{id}
		</if>
			<if test="parentid != null and parentid != ''">
				AND parentid = #{parentid}
		</if>
			<if test="parentids != null and parentids != ''">
				AND parentids = #{parentids}
		</if>
			<if test="name != null and name != ''">
				AND name = #{name}
		</if>
			<if test="code != null and code != ''">
				AND code = #{code}
		</if>
			<if test="url != null and url != ''">
				AND url = #{url}
		</if>
			<if test="icon != null and icon != ''">
				AND icon = #{icon}
		</if>
			<if test="sort != null and sort != ''">
				AND sort = #{sort}
		</if>
			<if test="description != null and description != ''">
				AND description = #{description}
		</if>
			<if test="createTime_start != null and createTime_start != ''">
				<![CDATA[   and DATE_FORMAT(createTime, '%Y-%m-%d')>=  DATE_FORMAT(#{createTime_start}, '%Y-%m-%d')   ]]>
		</if>
			<if test="createTime_end != null and createTime_end != ''">
				<![CDATA[   and DATE_FORMAT(createTime, '%Y-%m-%d')<  ADDDATE(DATE_FORMAT(#{createTime_end}, '%Y-%m-%d'),1)   ]]>
		</if>
			<if test="createBy != null and createBy != ''">
				AND createBy = #{createBy}
		</if>
			<if test="updateBy != null and updateBy != ''">
				AND updateBy = #{updateBy}
		</if>
			<if test="updateTime != null and updateTime != ''">
				AND updateTime = #{updateTime}
		</if>
			<if test="available != null and available != ''">
				AND available = #{available}
		</if>
			<if test="deleted != null and deleted != ''">
				AND deleted = #{deleted}
		</if>
			
    </sql>
    <select id="get"  resultType="java.util.Map">
        select a.*,b.name parentname
        from sys_permission a left join sys_permission b
		on a.parentid=b.id
        where
        a.id =#{id}
    </select> 
    <insert id="add" useGeneratedKeys="true" keyProperty="id" parameterType="com.markbro.dzd.sys.permission.bean.Permission" flushCache="true">
    	insert into sys_permission(id,parentid,parentids,name,code,url,icon,sort,description,createTime,createBy,updateBy,updateTime,available,deleted)
    	values (#{id},#{parentid},#{parentids},#{name},#{code},#{url},#{icon},#{sort},#{description},now(),#{createBy},#{updateBy},now(),1,0)
    </insert>
    <insert id="addBatch" flushCache="true">
        insert into sys_permission (id,parentid,parentids,name,code,url,icon,sort,description,createTime,createBy,updateBy,updateTime,available,deleted)
        values
        <foreach collection="list" item="item" separator="," >
        	(#{item.id},#{item.parentid},#{item.parentids},#{item.name},#{item.code},#{item.url},#{item.icon},#{item.sort},#{item.description},now(),#{item.createBy},#{item.updateBy},now(),1,0)
        </foreach>
    </insert>
    <update id="update" parameterType="com.markbro.dzd.sys.permission.bean.Permission" flushCache="true">
    	update sys_permission 
    	<set>
    		<if test="parentid != null">parentid=#{parentid},</if>
			<if test="parentids != null">parentids=#{parentids},</if>
			<if test="name != null">name=#{name},</if>
			<if test="code != null">code=#{code},</if>
			<if test="url != null">url=#{url},</if>
			<if test="icon != null">icon=#{icon},</if>
			<if test="sort != null">sort=#{sort},</if>
			<if test="description != null">description=#{description},</if>
			<if test="createBy != null">createBy=#{createBy},</if>
			<if test="updateBy != null">updateBy=#{updateBy},</if>
			updateTime=now(),
			<if test="available != null">available=#{available},</if>
			<if test="deleted != null">deleted=#{deleted},</if>
			
    	</set>
    	 where
    	id =#{id}
    </update>
	<update id="updateByMap" parameterType="map" flushCache="true">
        update sys_permission
        <set>
            <if test="parentid != null">parentid=#{parentid},</if>
			<if test="parentids != null">parentids=#{parentids},</if>
			<if test="name != null">name=#{name},</if>
			<if test="code != null">code=#{code},</if>
			<if test="url != null">url=#{url},</if>
			<if test="icon != null">icon=#{icon},</if>
			<if test="sort != null">sort=#{sort},</if>
			<if test="description != null">description=#{description},</if>
			<if test="createBy != null">createBy=#{createBy},</if>
			<if test="updateBy != null">updateBy=#{updateBy},</if>
			updateTime=now(),
			<if test="available != null">available=#{available},</if>
			<if test="deleted != null">deleted=#{deleted},</if>
			
        </set>
        where
        id =#{id}
    </update>
	<update id="updateByMapBatch" parameterType="map" flushCache="true">
         update sys_permission
         <set>
         <if test="parentid != null">parentid=#{parentid},</if>
			<if test="parentids != null">parentids=#{parentids},</if>
			<if test="name != null">name=#{name},</if>
			<if test="code != null">code=#{code},</if>
			<if test="url != null">url=#{url},</if>
			<if test="icon != null">icon=#{icon},</if>
			<if test="sort != null">sort=#{sort},</if>
			<if test="description != null">description=#{description},</if>
			<if test="createBy != null">createBy=#{createBy},</if>
			<if test="updateBy != null">updateBy=#{updateBy},</if>
			updateTime=now(),
			<if test="available != null">available=#{available},</if>
			<if test="deleted != null">deleted=#{deleted},</if>
			
         </set>
         where
         id in
         <foreach collection="ids" item = "id" open="(" separator="," close=")">
         #{id}
         </foreach>
    </update>
  	<delete id="delete" flushCache="true">
      	delete  from sys_permission where id =#{id}
    </delete>
  	<delete id="deleteBatch" flushCache="true">
      	delete  from sys_permission where id in
        <foreach collection="array" item = "ids" open="(" separator="," close=")">
        #{ids}
        </foreach>
    </delete>
    <select id="find" resultMap="permissionResult" parameterType="java.util.Map">
        SELECT <include refid="allColumns"/> FROM sys_permission
        <where>
            and available=1
            and deleted=0
            <include refid="Permission_Where_Clause"/>
        </where>
		order by sort
    </select>
    <select id="findByMap" resultMap="permissionResult"  parameterType="map" >
   		SELECT <include refid="allColumns"/> FROM sys_permission
   		<where>
   		    <if test="id != null and id != ''">
				AND id = #{id}
			</if>
			<if test="parentid != null and parentid != ''">
				AND parentid = #{parentid}
			</if>
			<if test="parentids != null and parentids != ''">
				AND parentids = #{parentids}
			</if>
			<if test="name != null and name != ''">
				AND name = #{name}
			</if>
			<if test="code != null and code != ''">
				AND code = #{code}
			</if>
			<if test="url != null and url != ''">
				AND url = #{url}
			</if>
			<if test="icon != null and icon != ''">
				AND icon = #{icon}
			</if>
			<if test="sort != null and sort != ''">
				AND sort = #{sort}
			</if>
			<if test="description != null and description != ''">
				AND description = #{description}
			</if>
			<if test="createTime_start != null and createTime_start != ''">
				<![CDATA[   and DATE_FORMAT(createTime, '%Y-%m-%d')>=  DATE_FORMAT(#{createTime_start}, '%Y-%m-%d')   ]]>
			</if>
			<if test="createTime_end != null and createTime_end != ''">
				<![CDATA[   and DATE_FORMAT(createTime, '%Y-%m-%d')<  ADDDATE(DATE_FORMAT(#{createTime_end}, '%Y-%m-%d'),1)   ]]>
			</if>
			<if test="createBy != null and createBy != ''">
				AND createBy = #{createBy}
			</if>
			<if test="updateBy != null and updateBy != ''">
				AND updateBy = #{updateBy}
			</if>
			<if test="updateTime != null and updateTime != ''">
				AND updateTime = #{updateTime}
			</if>
			<if test="available != null and available != ''">
				AND available = #{available}
			</if>
			<if test="deleted != null and deleted != ''">
				AND deleted = #{deleted}
			</if>
			
   		</where>
   	</select>

	<select id="findByParentid" resultType="com.markbro.dzd.sys.permission.bean.Permission">
		select *
			from sys_permission
		<where>
			parentid=#{parentid}
			and deleted=0
			and available=1
		</where>
		order by sort
	</select>

	<!--查询登录用户url权限-->
	<select id="queryQxByYhid" resultType="java.util.Map"  parameterType="java.lang.String">
		select * from sys_permission where id in
		(select qxid from sys_permission_role where jsid in(select jsid from org_yh_js where yhid=1))
		and deleted=0
	</select>
	<!--删除菜单时检测是否含有子菜单-->
	<select id="checkForDelete" resultType="java.lang.Integer" parameterType="java.lang.String">
		select count(1) from sys_permission where deleted=0 and parentid in ('${ids}')
	</select>
	<select id="getParentidsById" resultType="java.lang.String" parameterType="java.lang.String">
		select parentids from sys_permission where id=#{id}
	</select>

	<update id="updateMenuSort" parameterType="java.lang.String">
		update sys_permission set sort=#{sort} where id=#{id}
	</update>

	<select id="getMaxSortByParentid" resultType="java.lang.Integer" parameterType="java.lang.String">
		select IFNULL(Max(sort),0) from sys_permission where deleted=0 and parentid=#{parentid}
	</select>
</mapper>
