		http://www.springframework.org/schema/data/jpa http://www.springframework.org/schema/data/jpa/spring-jpa.xsd
		http://www.springframework.org/schema/task http://www.springframework.org/schema/task/spring-task-4.1.xsd">

    <description>Spring公共配置</description>

	<context:property-placeholder location="classpath*:/*.properties" />

	<!-- 扫描加载除了@Controller以外的组件 -->
	<context:component-scan base-package="com.markbro.dzd">
		<context:exclude-filter type="annotation" expression="org.springframework.stereotype.Controller"/>
	</context:component-scan>

	<!--主键生成service-->
	<bean id="bmKeyService" class="com.markbro.dzd.base.tablekey.service.TableKeyService">
		<property name="key_name" value="org_department"></property>
	</bean>
	<bean id="gwKeyService" class="com.markbro.dzd.base.tablekey.service.TableKeyService">
		<property name="key_name" value="org_position"></property>
	</bean>
	<bean id="contextProvider" class="com.markbro.asoiaf.core.ContextProviderImpl"></bean>
	<bean class="com.markbro.asoiaf.core.utils.SpringContextHolder"></bean>

	<!--开发模式下配置此bean，修改xml映射文件后不用重启服务，开发模式打开-->
	<!--<bean id="mapperLoader" class="com.markbro.asoiaf.core.utils.MapperLoader"></bean>-->

	<!-- 配置 JSR303 Bean Validator 定义 -->
	<!--<bean id="validator" class="org.springframework.validation.beanvalidation.LocalValidatorFactoryBean" />-->
	<!-- ehCache缓存配置 主要用于缓存系统常用的数据，而应用数据使用mbts.xml配置的cache-->
	<bean id="ehCacheManager" class="org.springframework.cache.ehcache.EhCacheManagerFactoryBean">
		<property name="configLocation" value="classpath:${ehcache.configFile}" />
	</bean>

	<!--开启@Aspect的aop的实现方式-->
	<!--<aop:aspectj-autoproxy proxy-target-class="true"/>-->
	<!-- 定义事务管理器 -->

	<bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="dataSource"/>
	</bean>
	<tx:annotation-driven transaction-manager="transactionManager" proxy-target-class="true" />
